-# frozen_string_literal: true
= simple_form_for([:my,@shipping_address], url: my_shipping_address_path, method: :post) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :full_name

  .form-inputs
    = f.input :post

  .form-inputs
    = f.input :tel

  .form-inputs
    = f.input :address

  .form-actions
    = f.button :submit
