%h1 商品一覧

%ul.products
  - @products.each do |product|
    %li.products__product
      = link_to new_product_cart_product_path(product), class: 'text-body' do
        %p.products__img
          = image_tag product.image.url, class: 'w-100' if product.image?
          = image_tag 'no_image.png', class: 'w-100' unless product.image?
        %div.products__detail
          %p
            %strong.text-primary= product.name
          %p
            %strong.text-danger= price_unit(product.price)
          - if product.description?
            %p.mt-3= simple_format(product.description)

= paginate @products
