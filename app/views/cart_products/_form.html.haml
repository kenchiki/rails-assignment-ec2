-# frozen_string_literal: true
= simple_form_for([@product, @cart_product]) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :quantity, as: :select, collection: 1..CartProduct::MAX_QUANTITY, include_blank: false

  .form-actions
    = f.button :submit
