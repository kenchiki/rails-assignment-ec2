!!!
%html{lang: "ja"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title さくらマーケット
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    #wrapper
      %header#header
        %p#header-logo= link_to('さくらマーケット', root_path)
        %ul#header-nav
          - if user_signed_in?
            - if current_user.admin?
              %li.dropdown
                = link_to '管理者用', '#', {class: 'dropdown-toggle', 'data-toggle': 'dropdown'}
                .dropdown-menu
                  = link_to '商品一覧管理', admin_products_path, class: 'dropdown-item'
                  = link_to '代引き手数料変更', new_admin_cash_on_delivery_path, class: 'dropdown-item'
                  = link_to '送料変更', new_admin_delivery_price_path, class: 'dropdown-item'
                  = link_to '税率変更', new_admin_tax_path, class: 'dropdown-item'
                  = link_to 'ユーザー一覧管理', admin_users_path, class: 'dropdown-item'
            %li= link_to '買い物', products_path
            %li= link_to 'カート', cart_products_path
            %li= link_to '配送情報変更', edit_my_user_path
            %li= link_to "ログアウト", destroy_user_session_path, method: :delete
      #container
        = render 'layouts/flash'
        = yield