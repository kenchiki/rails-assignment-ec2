%h1 ログイン情報変更
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %p
        現在確認待ちです: #{resource.unconfirmed_email}
    = f.input :password,
      hint: 'パスワードを変更しない場合は空にしてください',
      required: false,
      input_html: { autocomplete: "new-password" }
    = f.input :password_confirmation,
      required: false,
      input_html: { autocomplete: "new-password" }
    = f.input :current_password,
      hint: '変更を確認するために現在のパスワードが必要です',
      required: true,
      input_html: { autocomplete: "current-password" }
  .form-actions
    = f.button :submit

%h2.mt-5 アカウント削除
%p
  = link_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'
