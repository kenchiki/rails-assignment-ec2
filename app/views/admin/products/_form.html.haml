-# frozen_string_literal: true
= simple_form_for([:admin, @product]) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name

  .form-inputs
    = f.input :price, input_html: {type: 'number'}, as: :append_text, append: 'å††'

  .form-inputs
    = f.input :description

  .form-inputs
    = f.input :image, input_html: { class: 'form-control-file' }
    = f.hidden_field :image_cache
    - if f.object.image?
      %p= image_tag f.object.image.url
      = f.input :remove_image, as: :boolean, label_html: { class: 'form-check-label' },input_html: { class: 'form-check-input is-valid boolean optional' }

  .form-inputs
    = f.input :published

  .form-actions
    = f.button :submit
