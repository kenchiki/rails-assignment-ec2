
%table.table.table-striped{'data-test': 'users__show'}
  %tbody
    %tr
      %th ID
      %td= @user.id
    %tr
      %th= t_model('user.email')
      %td= @user.email
    %tr
      %th= t_model('shipping_address.full_name')
      %td= @user.full_name
    %tr
      %th= t_model('shipping_address.post')
      %td= @user.post
    %tr
      %th= t_model('shipping_address.tel')
      %td= @user.tel
    %tr
      %th= t_model('shipping_address.address')
      %td= @user.address

.form-actions
  = link_to '編集', edit_admin_user_path(@user), class: 'btn btn-primary'
  = link_to '一覧', admin_users_path, class: 'btn btn-primary'
